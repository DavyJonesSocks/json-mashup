{% extends 'base.html.twig' %}
{% block title %}Dashboard | {{ parent() }}{% endblock %}

{% block body %}
    <div class="wrapper" ng-app="PokeApi">
        <div class="dashboard" ng-controller="DashboardCtrl">
            <div class="pokemon" ng-repeat="pokemon in data" ng-click="showDetails(pokemon)">
                <img src="[[ pokemon.sprites.front_default ]]">
                <label ng-bind="pokemon.name"></label>
            </div>
        </div>
    </div>
{% endblock %}
